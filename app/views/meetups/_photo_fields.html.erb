<div class="nested-fields card">
    <div class="field card-body">
      <%= f.label :file %>
      <div class="form-group row">
        <div class="col-sm-10">
          <%= f.file_field :file, :required => true, class:'form-control' %><br/>
        </div>
        <%= f.hidden_field :meetup_id, value: @meetup.id %>
        <div class="col-sm-2">
          <%= link_to_remove_association f, {class:'btn btn-danger', aria: {label:"#{I18n.t 'main.remove'}"}} do %><%= icon('fas', 'times') %><% end %>
        </div>
        <div class="col-sm-12">
          <%= f.label :attribution %>
          <%= f.text_field :attribution, class:'form-control' %>
        </div>
      </div>
    </div>
</div>
