<div class="nested-fields card">
    <div class="field card-body">
      <%= f.label :file %>
      <div class="form-group row">
        <div class="col-sm-10">
          <%= f.file_field :file, :required => true, class:'form-control' %>
        </div>
        <div class="col-sm-2">
          <%= link_to_remove_association f, {class:'btn btn-danger', aria: {label:"#{I18n.t 'main.remove'}"}} do %><%= fa_icon 'times' %><% end %>
        </div>
      </div>
    </div>
</div>